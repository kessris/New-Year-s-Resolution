<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bcgamejam2018.resolution.bcgamejam2018resolution.feature.Intro">

    <ImageButton
        android:id="@+id/intro1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="setIntro2Visible"
        android:scaleType="fitXY"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/intro1" />

    <ImageButton
        android:id="@+id/intro2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="setRuleVisible"
        android:scaleType="fitXY"
        android:visibility="invisible"
        app:srcCompat="@drawable/intro2" />

    <ImageButton
        android:id="@+id/skip"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginBottom="8dp"
        android:background="@android:color/transparent"
        android:onClick="skip"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/skip"
        tools:layout_editor_absoluteX="8dp" />

    <ImageButton
        android:id="@+id/rules"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="skip"
        android:scaleType="fitXY"
        android:visibility="invisible"
        app:srcCompat="@drawable/rules" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:text="*Tap Anywhere to Move On"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>
