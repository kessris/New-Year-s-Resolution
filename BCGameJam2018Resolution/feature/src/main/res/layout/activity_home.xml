<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bcgamejam2018.resolution.bcgamejam2018resolution.feature.HomeActivity">

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/background"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sentence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="There's 12 months left in the year!!"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/stats"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/character"
        android:layout_height="wrap_content"
        android:layout_width="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/lin"
        app:layout_constraintEnd_toStartOf="@+id/lin"
        app:layout_constraintStart_toStartOf="@+id/background"
        app:layout_constraintTop_toTopOf="@+id/background"
        app:srcCompat="@drawable/thecharacter" />

    <ImageView
        android:id="@+id/stickynote"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/lin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/stickynote" />

    <TextView
        android:id="@+id/month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jan"
        android:textColor="@android:color/background_dark"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/stickynote"
        app:layout_constraintLeft_toLeftOf="@+id/stickynote"
        app:layout_constraintRight_toRightOf="@+id/stickynote"
        app:layout_constraintTop_toTopOf="@+id/stickynote" />

    <ImageView
        android:id="@+id/stats"
        android:layout_width="200dp"
        android:layout_height="149dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/lin"
        app:layout_constraintEnd_toStartOf="@+id/stickynote"
        app:layout_constraintStart_toEndOf="@+id/character"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/stats" />

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/stats"
        app:layout_constraintHorizontal_bias="0.76"
        app:layout_constraintLeft_toLeftOf="@+id/stats"
        app:layout_constraintRight_toRightOf="@+id/stats"
        app:layout_constraintTop_toTopOf="@+id/stats"
        app:layout_constraintVertical_bias="0.494">

        <ImageView
            android:id="@+id/qewr"
            android:layout_width="100dp"
            android:layout_height="10dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:translationX="0dp"
            app:layout_constraintEnd_toStartOf="@+id/stickynote"
            app:layout_constraintStart_toStartOf="@+id/stats"
            app:srcCompat="@android:color/holo_red_light"
            tools:layout_editor_absoluteY="63dp" />

        <ImageView
            android:id="@+id/abc"
            android:layout_width="100dp"
            android:layout_height="10dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toStartOf="@+id/stickynote"
            app:layout_constraintStart_toStartOf="@+id/stats"
            app:layout_constraintTop_toBottomOf="@+id/relStat"
            app:srcCompat="@android:color/holo_red_light" />

        <ImageView
            android:id="@+id/abcd"
            android:layout_width="100dp"
            android:layout_height="10dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toStartOf="@+id/stickynote"
            app:layout_constraintStart_toStartOf="@+id/stats"
            app:layout_constraintTop_toBottomOf="@+id/intelStat"
            app:srcCompat="@android:color/holo_red_light" />

        <ImageView
            android:id="@+id/abcde"
            android:layout_width="100dp"
            android:layout_height="10dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toStartOf="@+id/stickynote"
            app:layout_constraintStart_toStartOf="@+id/stats"
            app:layout_constraintTop_toBottomOf="@+id/wealthStat"
            app:srcCompat="@android:color/holo_red_light" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/a"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/stats"
        app:layout_constraintHorizontal_bias="0.76"
        app:layout_constraintLeft_toLeftOf="@+id/stats"
        app:layout_constraintRight_toRightOf="@+id/stats"
        app:layout_constraintTop_toTopOf="@+id/stats"
        app:layout_constraintVertical_bias="0.494">

        <ImageView
            android:id="@+id/intelStat2"
            android:layout_width="5dp"
            android:layout_height="10dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:translationX="0dp"
            android:visibility="visible"
            app:layout_constraintEnd_toStartOf="@+id/stickynote"
            app:layout_constraintStart_toStartOf="@+id/stats"
            app:srcCompat="@android:color/holo_green_dark"
            tools:layout_editor_absoluteY="63dp" />

        <ImageView
            android:id="@+id/wealthStat2"
            android:layout_width="5dp"
            android:layout_height="10dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toStartOf="@+id/stickynote"
            app:layout_constraintStart_toStartOf="@+id/stats"
            app:layout_constraintTop_toBottomOf="@+id/relStat"
            app:srcCompat="@android:color/holo_green_dark" />

        <ImageView
            android:id="@+id/relStat2"
            android:layout_width="5dp"
            android:layout_height="10dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toStartOf="@+id/stickynote"
            app:layout_constraintStart_toStartOf="@+id/stats"
            app:layout_constraintTop_toBottomOf="@+id/intelStat"
            app:srcCompat="@android:color/holo_green_dark" />

        <ImageView
            android:id="@+id/healthStat2"
            android:layout_width="5dp"
            android:layout_height="10dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toStartOf="@+id/stickynote"
            app:layout_constraintStart_toStartOf="@+id/stats"
            app:layout_constraintTop_toBottomOf="@+id/wealthStat"
            app:srcCompat="@android:color/holo_green_dark" />
    </LinearLayout>

    <GridLayout
        android:id="@+id/lin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/background">

        <ImageButton
            android:id="@+id/relButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:background="@android:color/transparent"
            android:onClick="relationshipGame"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/button4" />

        <ImageButton
            android:id="@+id/healthButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:background="@android:color/transparent"
            android:onClick="healthGame"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/button3" />

        <ImageButton
            android:id="@+id/wealthButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:background="@android:color/transparent"
            android:onClick="wealthGame"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/button2" />

        <ImageButton
            android:id="@+id/intelButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:background="@android:color/transparent"
            android:onClick="intelGame"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/button1" />
    </GridLayout>
</android.support.constraint.ConstraintLayout>
